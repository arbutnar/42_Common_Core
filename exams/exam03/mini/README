---Dichiarare ed inizializzare la struttuta zone;
---argc != 2;
		---error_msg(); ft_strlen();
---apertura del file;
---create_zone();
	---fscanf() != 3;
	---zone dimentions;
	---allocations + background assegnation;
		---clean_all();
---draw_shape();
	---Dichiarare ed inizializzare la struttura shape;
	---fscanf() == 5;
		---radius check || type check;
		---*draw_circle();
	---ret != 1;
	---*draw_circle();
		---ret = in_circle((floats));
		---type == 'c' + ret == 2; type == 'C' + ret; --> color;
		---*in_circle()
			---distance = sqrtf(powf(y - y, 2.0) + powf(x - x, 2.0));
				---if (distance <= radius)
					if ((radius - distance) < 1.00000) --> return (2); return (1);
---print_matrix();
---clean_all();